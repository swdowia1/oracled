<Window x:Class="AnalizaAppWpf.HashForm" WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalizaAppWpf"
        mc:Ignorable="d"
        Title="HashForm" Height="300" Width="600">
    <Grid  ShowGridLines="False" VerticalAlignment="Center" >
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="1*" />
           
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>


            <RowDefinition   />
            <RowDefinition  />
            <RowDefinition  />
           
        </Grid.RowDefinitions>
        <Label Grid.Column="0"  Grid.Row="0" Margin="15">SaveXLS</Label>
        <TextBox x:Name="txtPasword" KeyUp="txtPasword_KeyUp" Margin="15"  Grid.Column="1" Grid.Row="0" />

        <Label Grid.Column="0" Margin="15"  Grid.Row="1">txtStatystykaUser</Label>
        <TextBox x:Name="txtPaswordHash" Margin="15" Grid.Column="1" Grid.Row="1" />

        <Button Grid.Row="3" Grid.Column="0" Margin="15"  x:Name="btnSave" Click="btnSave_Click"  >Zapisz</Button>
        <Button Grid.Row="3" Grid.Column="1" Margin="15" x:Name="btnCancel" Click="btnCancel_Click"  >Anulu</Button>
    </Grid>
</Window>
